<%- include('./header') %>

<div class="continer-fluid">
      <div class="mx-3">
        <div class="row ">
          <% for(var i=0; i < items.length; i++) { %>
          <div class="col-lg-3 col-xl-3 col-md-10">
            <div class="card mt-3 shadow mb-3 bg-white rounded border-danger" >
              <div class="card-img">
                <img src="<%- items[i].image %>" alt="" style="height: 30vh !important; width: 100% !important;"/>
              </div>
              <div class="card-body">
                <h3> <%- items[i].title %> </h3>
                <h6> <%- items[i].info %> </h6>
                  <button type="button" class="btn btn-outline-danger btn-block" id="add_cart_btn" onclick= "addtocart()" >Add to Cart</button>
                  <button href="users/buy"  class="btn btn-danger btn-block" >Buy Now</button>
              </div>
            </div>
          </div>
          <% } %> 
        </div>
      </div>
    </div>
    <script src="cart.js"></script>

    <%- include('./footer') %>
    


